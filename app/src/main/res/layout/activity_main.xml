<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_gravity="center_vertical"
    android:background="@color/Alabaster"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp"
        android:layout_margin="30dp"
        android:background="@color/MaastrichtBlue">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:layout_margin="0dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="height(cm)"
                android:background="@color/VeryPaleYellow"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:padding="10dp"
                android:layout_margin="10dp"/>
            <EditText
                android:id="@+id/height"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:background="@color/BrightGray"
                android:hint="0cm "
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:layout_margin="0dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="weight(kg)"
                android:background="@color/VeryPaleYellow"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:padding="10dp"
                android:layout_margin="10dp"/>
            <EditText
                android:id="@+id/weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:background="@color/BrightGray"
                android:hint="0kg "
                android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical">

        <Button
            android:id="@+id/submit"
            android:onClick="pressSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_margin="10dp"
            android:backgroundTint="@color/RipeMango"
            android:textSize="20dp"
            android:text="submit" />
        <Button
            android:id="@+id/clear"
            android:onClick="pressClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="@color/PictorialCarmine"
            android:text="clear"
            android:textColor="@color/CosmicLatte"
            android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="0dp"
            android:layout_margin="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BMI"
                    android:background="@color/VeryPaleYellow"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    android:padding="10dp"
                    android:layout_margin="10dp"/>
                <TextView
                    android:id="@+id/bmiText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_margin="10dp"
                    android:background="@color/BrightGray"
                    android:text="0 "
                    android:textSize="34sp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/commentText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:background="@color/BrightGray"
                android:text="comment "
                android:textSize="34sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>